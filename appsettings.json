{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=AppointmentSystem;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "JwtSettings": {
    "SecretKey": "your-super-secret-key-with-at-least-32-characters",
    "Issuer": "AppointmentSystem",
    "Audience": "AppointmentSystem",
    "ExpirationInMinutes": 60
  },
  "SMSSettings": {
    "ApiKey": "your-sms-api-key",
    "SenderNumber": "your-sender-number",
    "IsEnabled": true
  }
}
